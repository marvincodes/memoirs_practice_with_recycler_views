<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:layout_margin="4dp">

    <android.support.v7.widget.CardView android:id="@+id/cv_albumContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/tv_albumTitle"
                android:layout_margin="8dp"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"/>

            <TextView android:id="@+id/tv_albumDate"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_albumTitle"
                android:text="1st Sep 16"
                android:textSize="18sp"/>

            <ImageButton android:id="@+id/ibtn_albumFavorite"
                android:background="#FFFFFF"
                android:layout_margin="8dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/favorite_star_false"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>